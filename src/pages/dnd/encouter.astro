---
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";

import { DND } from "@consts";
import Container from "@components/Container.astro";
import StartScreen from "@components/DND/game/StartScreen";
---

<PageLayout
  title={DND.TITLE}
  description={DND.DESCRIPTION}
  keywords={DND.KEYWORDS}
>
  <TopLayout>
    <div class="animate page-heading">
      {DND.TITLE}
      <StartScreen client:load />
    </div>
  </TopLayout>
  <Container size="xl" />
</PageLayout>
